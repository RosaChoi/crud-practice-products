<div class="page-header">
  <div class="pull-right">
    <%= link_to "New Product", new_product_path, class: "btn btn-info" %>
  </div>
  <h1>Products</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>
