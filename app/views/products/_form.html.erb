<%= form_for @products do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :name %>
  </div>

  <div class="action form-group">
    <%= f.submit%>
  </div>

<% end %>
